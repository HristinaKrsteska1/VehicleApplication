@model VehicleApplication.Models.NewVehicleViewModel
@{
    /**/

    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Vehicle"))
{
    @Html.HiddenFor(v => v.Vehicle.Id)
    <div class="form-group">
        @Html.LabelFor(v => v.Vehicle.LicencePlateNumber, htmlAttributes: new { @class = "control-label col-md-2" })
        <div>
            @Html.EditorFor(v => v.Vehicle.LicencePlateNumber, new { htmlAttributes = new { @class = "form-control" } })
             
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(v => v.Vehicle.VIN, htmlAttributes: new { @class = "control-label col-md-2" })
        <div>
            @Html.EditorFor(v => v.Vehicle.VIN, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(v => v.Vehicle.VIN, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="MarkaNaVoziloId">Membership type</label>
        <div>
            @Html.DropDownListFor(v => v.Vehicle.MarkaNaVoziloId, new SelectList(Model.MarkaNaVozilo, "Id", "ModelName"), "Edit Model Name", new { @class = "form-control" })
            
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}